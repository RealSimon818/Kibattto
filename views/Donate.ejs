<%- include('partials/header') %>
<section class="donation">
<div class="container mt-5">
    <div class="card custom-card text-center"data-aos="flip-right" data-aos-delay="300">
      <div class="card-body">
        <h3 class="card-title">Support Our Foundation</h3>
        <p class="card-text mb-3">
            Choose how you'd like to contribute to our cause. Your support can make a world of difference in the lives of the children we care for. Whether you opt for a one-time donation or prefer to support us on a monthly basis, every contribution helps us provide essential resources and opportunities. Please select your preferred method below to continue.
          </p>
        
        <!-- Monthly and Once Buttons -->
        <button id="monthlyBtn" class="btn btn-primary m-2 px-4"data-aos="slide-up" data-aos-delay="400">Monthly</button>
        <button id="onceBtn" class="btn btn-secondary m-2 px-4"data-aos="slide-up" data-aos-delay="400">Once</button>

        <!-- Donation Method Text and Payment Buttons (Initially Hidden) -->
        <div id="paymentOptions" class="mt-4" style="display: none;">
          <p id="donationText" class="card-text"></p> <!-- Text will be populated dynamically -->
          <button id="paypalBtn" class="btn btn-info m-2 px-4">PayPal</button>
          <button id="visaBtn" class="btn btn-warning m-2 px-4">Visa</button>
        </div>
      </div>
    </div>
  </div>
</section>

  <!--footer-->
  <section id="footer" class="mt-0" data-aos="fade-up">
    <%- include('partials/foote') %>
  </section>
  <script src="./js/donate.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
  <script>
    AOS.init();
  </script>
</body>
</html>